generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Score {
  id        String   @id @default(uuid())
  dateAdded DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  wpm       Int
  accuracy  Int
  time      Int
  author    String

  @@index([userId])
}

model User {
  id         String   @id
  email      String   @unique
  username   String   @unique
  avatarUrl  String?
  dateJoined DateTime @default(now())
  scores     Score[]
}
